<div class='comments'>
  {{#each this}}
    <section class='comment'>
      <div class='meta'>
        {{user.username}}
        on
        {{! use our helper to format the date, same as format_date(created_at) }}
        {{format_date created_at}}
      </div>
      <div class='text'>
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>